# OpenAI API key (required for summarizer)
OPENAI_API_KEY=YOUR_OPENAI_KEY

# Default timezone for scheduling (IANA timezone, e.g. UTC, America/New_York, Asia/Jerusalem)
DEFAULT_TIMEZONE=Asia/Jerusalem

### DEFAULT CONFIGURATION - NO NEED TO CHANGE ###
# WhatsApp gateway override (dev-only: bypasses assistant-mode routing)
# WHATSAPP_GATEWAY_URL=http://whatsapp_gateway:3000

# Default gateways (auto-selected by assistant mode)
WHATSAPP_BAILEYS_GATEWAY_URL=http://whatsapp_gateway:3000
WHATSAPP_OFFICIAL_GATEWAY_URL=http://official_gateway:3000

# Fan-out targets for inbound WhatsApp events
WHATSAPP_EVENT_TARGETS=http://summarizer:5001/whatsapp/events,http://timed_messages:8000/whatsapp/events

# Assistant mode (require approved numbers)
WHATSAPP_ASSISTANT_MODE=false

# Cloud API webhook + send (official gateway)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=YOUR_VERIFY_TOKEN
WHATSAPP_APP_SECRET=YOUR_APP_SECRET
WHATSAPP_CLOUD_TOKEN=YOUR_CLOUD_API_TOKEN
WHATSAPP_PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID
WHATSAPP_GRAPH_VERSION=v24.0

# Database URL for timed_messages (Docker network)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/timed_messages
