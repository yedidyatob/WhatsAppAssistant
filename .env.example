# OpenAI API key (required for summarizer)
OPENAI_API_KEY=YOUR_OPENAI_KEY

# Default timezone for scheduling (IANA timezone, e.g. UTC, America/New_York, Asia/Jerusalem)
DEFAULT_TIMEZONE=Asia/Jerusalem

### DEFAULT CONFIGURATION - NO NEED TO CHANGE ###
# WhatsApp gateway for outbound replies from services
WHATSAPP_GATEWAY_URL=http://whatsapp_gateway:3000

# Fan-out targets for inbound WhatsApp events
WHATSAPP_EVENT_TARGETS=http://summarizer:5001/whatsapp/events,http://timed_messages:8000/whatsapp/events

# Database URL for timed_messages (Docker network)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/timed_messages